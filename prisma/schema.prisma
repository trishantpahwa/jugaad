generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("VITE_VERCEL_POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Repository {
  id     Int  @id @default(autoincrement())
  userID Int
  user   User @relation(fields: [userID], references: [id])
}

model User {
  id              Int          @id @default(autoincrement())
  githubID        String       
  githubNodeID    String
  name            String
  email           String
  username        String
  profileURL      String
  blog            String
  bio             String
  githubCreatedAt String
  followers       String
  following       String
  privateGists    String
  publicGists     String
  repository      Repository[]
}
